{
  "name": "rsl-platform",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --names web,api --prefix-colors green,blue \"npm:dev:client\" \"npm:dev:api\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "NODE_ENV=production node server/dev-server.js",
    "heroku-postbuild": "npm run build",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir dist",
    "deploy:heroku": "git push heroku main",
    "dev:client": "vite",
    "dev:api": "node server/dev-server.js",
    "dev:ngrok": "node server/start-ngrok.js",
    "dev:public": "concurrently --names web,api,tunnel --prefix-colors green,blue,magenta \"npm:dev:client\" \"npm:dev:api\" \"npm:dev:ngrok\""
  },
  "dependencies": {
    "@google-cloud/aiplatform": "^5.7.0",
    "@google/genai": "^1.20.0",
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "exifr": "^7.1.3",
    "express": "^5.1.0",
    "mp4box": "^0.5.2",
    "node-fetch": "^3.3.2",
    "node-forge": "^1.3.1",
    "node-id3": "^0.2.6",
    "pdf-lib": "^1.17.1",
    "piexifjs": "^1.0.6",
    "png-chunk-text": "^1.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/node-forge": "^1.3.11",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
